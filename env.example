# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=revurge
DATABASE_USER=root
DATABASE_PASS=password

# Server Configuration
PORT=5001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# AWS S3 Configuration
S3_BUCKET_ACCESS_KEY_ID=your_access_key
S3_BUCKET_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=your_bucket_name
S3_BUCKET_REGION=us-east-1
S3_SUB_FOLDER=folder_name

# File Upload Configuration
FILEPATH_MEDIA=public/uploads/media/

# Email Configuration (Gmail SMTP)
EMAIL_USER=your_email@gmail.com
EMAIL_APP_PASSWORD=your_app_password
EMAIL_FROM_NAME=Revurge Platform

# Frontend URL (IMPORTANT: Set to production URL in production environment)
# For production, set to: https://book.beige.app
FRONTEND_URL=http://localhost:3000

# Google Sheets Integration (for Investor Form submissions)
# 1. Create a Google Cloud project and enable Google Sheets API
# 2. Create a Service Account and download the JSON credentials
# 3. Share your spreadsheet with the service account email
# GOOGLE_SHEETS_CREDENTIALS can be:
#   - Base64-encoded JSON credentials
#   - Direct JSON string
#   - Path to credentials file (e.g., ./google-credentials.json)
GOOGLE_SHEETS_CREDENTIALS=
# The spreadsheet ID from your Google Sheet URL (between /d/ and /edit)
INVESTOR_SPREADSHEET_ID=
# Optional: Sheet tab name (defaults to 'Investors')
INVESTOR_SHEET_NAME=Investors

# Booking data spreadsheet (for syncing guest bookings)
# The spreadsheet ID from your Google Sheet URL (between /d/ and /edit)
BOOKING_SPREADSHEET_ID=
# Optional: Sheet tab name (defaults to 'Bookings')
BOOKING_SHEET_NAME=Bookings

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001


